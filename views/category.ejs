                              <% }else if(role =='illustrator'){ %>
                                <% role = '그림' %>
                                <% }else if(role =='original_author'){ %>
                                  <% role = '원작' %>
                                  <% }else if(role =='Author'){ %>
                                    <% role = '글/그림' %>
                                    <% }else{ %>
