    <button class="top_btn" id="top-btn">↑</button>
    <script src="/js/adult_blind.js"></script>
    <script>
     window.onload = function() {
        const urlParams = new URLSearchParams(window.location.search);
        const query = urlParams.get('query');
        const currPage = parseInt(urlParams.get('page'), 10) || 1; 

        if (query) {
            const selectedBtn = document.querySelector(`.category-nav a[href*="query=${query}"]`).parentElement; 
        if (selectedBtn) { 
            selectedBtn.classList.add('selected-nav');
            }
        }
        if (currPage && currPage > 1) { 
            const pageLinkBack = document.querySelector('.page-link-back');
            if (pageLinkBack) { 
                pageLinkBack.setAttribute('href', `/category?query=${query}&page=${currPage-1}`);
            }
        }
        if (currPage) { // && currPage < maxPages
            const pageLinkForward = document.querySelector('.page-link-forward'); 
            if (pageLinkForward) { 
                pageLinkForward.setAttribute('href', `/category?query=${query}&page=${currPage+1}`);
            }
        }
        
        document.querySelector('.page-item-num').innerHTML = `${currPage}&nbsp;&nbsp;&nbsp;&nbsp;`;
    }

      $(document).ready(function () {
        // Top 버튼 특정 스크롤높이에서만 보이기 / 숨기기
        $(window).scroll(function () {
          if ($(this).scrollTop() > 100) {
            $('#top-btn').fadeIn();
          } else {
            $('#top-btn').fadeOut();
          }
        });

        // Top 버튼 클릭시 페이지 상단으로 이동
        $('#top-btn').click(function () {
          $('html, body').animate({ scrollTop: 0 }, 800);
          return false;
        });
      });
    </script>
