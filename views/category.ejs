                                  <% }else{ %>
                                    <% role = '작가' %>
                                    <% }%>
                          <span class="metadata-item- author-item-wrapper">
                            <span class="author-detail"><%= name %></span> <%= role %>
                           </span>
                        </div>
                        <div class="card-info-star">별점:<%= item.starRate %></div>
                      </div>
                    </a>
